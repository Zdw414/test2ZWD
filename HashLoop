 	function makePyramid() {
		var totalNumberofRows = 5;
		var arr; 
		for (var i = 1; i <= totalNumberofRows; i++) {
		 arr = [];
		for (var j = 1; j <= i; j++) {
			arr.push('#');   	     
				}
			console.log(arr.join("") +"\n");
				
			}
		}   
	
  
